# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================
# DATABASE (Use either MONGODB_URI or MONGO_URI)
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp-crm?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION (REQUIRED - Min 32 chars)
# ============================================
JWT_SECRET=change-this-to-a-secure-random-string-min-32-characters-long
JWT_EXPIRE=7d

# ============================================
# WHATSAPP BUSINESS API (Get from Meta Developer Console)
# ============================================
WHATSAPP_ACCESS_TOKEN=your-access-token-from-meta
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_APP_SECRET=your-app-secret
WHATSAPP_API_VERSION=v18.0

# ============================================
# WEBHOOK CONFIGURATION
# ============================================
WEBHOOK_VERIFY_TOKEN=my_secure_webhook_token_2024
WEBHOOK_URL=https://yourdomain.com/webhooks/whatsapp

# ============================================
# EMAIL (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcrm.com

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# AI/AUTOMATION (Optional)
# ============================================
OPENAI_API_KEY=your-openai-key-if-using-ai
AI_MODEL=gpt-3.5-turbo
